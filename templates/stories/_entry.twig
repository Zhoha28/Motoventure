
 {% extends "index" %}
  {% set pageTitle = entry.title ~ " - Stories from Motoventure " %}
    {% set pageDescription = entry.shortDescription  %}
  {% set body_classes = "inner-page" %}
{% block content %}
 
{% cache using key 'individual-stories-page' %}
  <article class="section">
      <div class="content-column content-column--narrow">

        <h1 class="centered">{{ entry.title }}</h1>

        <!-- Slider Component -->
        {% include "components/slider" with {
          photos: entry.photos.all()
        } %}

       {{ entry.richText }}
      </div>
    </article>
{% endcache %}
    {% endblock %}