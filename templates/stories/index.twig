 {% extends "index" %}

 {% set body_classes = "inner-page" %}
 {% set pageTitle = entry.title %}
{% block content %}


 
 {% set stories = craft.entries.section('stories').all() %}

{% cache using key 'stories-page' %}
 <section class="section">
      <div class="content-column">

        <h1 class="centered">{{ entry.title }}</h1>

        <div class="two-columns">
 {% for story in stories %}

 {% set storyPhoto = story.photos.one() %}
          <div class="two-columns__item">
            
            <div class="two-columns__content">
              <h2>{{ story.title }}</h2>
              <p>{{ story.shortDescription }}</p>
              <p>
                <a href="{{ story.url }}" class="cta-link">Discover the full story</a>
              </p>
            </div>

            <div class="two-columns__image">
              <img src="{{ storyPhoto.url }}" alt="{{storyPhoto.title}}">
            </div>
            
          </div>

{% endfor %}
          
        </div>
        
      </div>
    </section>

{% endcache %}
    {% endblock %}